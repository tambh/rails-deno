<% provide(:title,"Show") %>
<p id="notice">
	<%= notice %>
</p>

<p>
	<b>Name:</b>
	<%= @user.name %>
</p>

<p>
	<b>Email:</b>
	<%= @user.email %>
</p>
<br />

<div class="span8">
	<% if @user.microposts.any? %>
	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	<ol class="microposts">
		<%= render @microposts %>
	</ol>
	<%= will_paginate @microposts %>
	<% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
